<tr>
	<td><%= character.name %></td>
	<td><%= link_to 'Show', [character.game, character] %></td>
	<% if current_user %>
	<td><%= link_to 'Edit', edit_game_character_path(character.game.id, character.id)%></td>
	<td><%= link_to 'Destroy', [character.game, character],
        	method: :delete,
        	data: { confirm: 'Are you sure?' } %>	
	</td>
	<% end %>
</tr>
