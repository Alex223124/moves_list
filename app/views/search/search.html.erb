<h2>Search Results</h2>

<table class='table table-hover'>
  <tbody>
    <% if @games.empty? %>
    <tr>
      <td>
        Enter search terms to find matching Games on Move List.
      </td>
    </tr>
    <% end %>
    <% @games.each do |game| %>
      <tr>
        <td>
          <%= link_to game.try(:highlight).try(:title) ? 
            game.highlight.title[0].html_safe : game.title,
            game_characters_path(game._id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to ' Back', games_path,
  class: "fa fa-arrow-circle-left btn btn-xs btn-primary" %>
