<h2><%= @character.name %>'s Moves</h2>

<% @moves.keys.sort.each do |category| %>
	<h4><%= category %></h4>
	<% @moves[category].each do |moves| %>
		<%= render moves %>
	<% end %>
<% end %>
<% if current_user %>
<%= link_to 'New move', new_character_move_path %>
<% end %>

<p>
<%= link_to 'Back', game_characters_path(@character.game_id) %>
</p>